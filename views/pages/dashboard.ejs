           //hide and show balance  
           // JavaScript for toggling balance visibility and icon
const showbal = document.getElementById("showbal");
const mybalance = document.getElementById("mybalance"); 
const sbal = document.getElementById("sbal");

showbal.onclick = function() {
  // Toggle the balance display
  if (mybalance.style.display === "none") { 
    mybalance.style.display = "block"; // Show balance 
    sbal.style.display = 'none';
    showbal.classList.remove("fa-eye-slash");
    showbal.classList.add("fa-eye"); // Change icon to eye
  } else { 
    sbal.style.display = 'block';
    mybalance.style.display = "none"; // Hide balance
    showbal.classList.remove("fa-eye");
    showbal.classList.add("fa-eye-slash"); // Change icon to eye-slash
  }
};
  
 

function updateLogoutText() {
    const logoutContainer = document.getElementById("logout");
    if (window.innerWidth >= 751) {
        logoutContainer.innerHTML = 'Proceed to Log out';
    } else {
        logoutContainer.innerHTML = 'Log out'; // Optionally clear content for smaller screens
    }
}

// Run on load and on resize
window.addEventListener('load', updateLogoutText);
window.addEventListener('resize', updateLogoutText);


