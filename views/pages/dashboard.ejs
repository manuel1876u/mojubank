      input.addEventListener('input', function() {
        if (input.value !== '') {
          if (index < pinInputs.length - 1) {
            pinInputs[index + 1].focus();
          }
        } else if (input.value === '') {
          if (index > 0) {
            pinInputs[index - 1].focus();
